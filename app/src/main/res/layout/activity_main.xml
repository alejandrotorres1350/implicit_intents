<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <EditText
            android:layout_width="329dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="@string/link_editText"
            android:ems="10"
            android:id="@+id/website_editText" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginTop="64dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintHorizontal_bias="0.363"
            android:textColor="@android:color/darker_gray"/>
    <EditText
            android:layout_width="329dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="@string/location_editText"
            android:ems="10"
            android:id="@+id/location_editText" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            app:layout_constraintHorizontal_bias="0.363"
            android:textColor="@android:color/darker_gray" android:layout_marginTop="100dp"
            app:layout_constraintTop_toBottomOf="@+id/website_editText"/>
    <EditText
            android:layout_width="329dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="@string/shared_editText"
            android:ems="10"
            android:id="@+id/sharetext_editText" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            app:layout_constraintHorizontal_bias="0.363"
            android:textColor="@android:color/darker_gray"
            android:layout_marginTop="100dp" app:layout_constraintTop_toBottomOf="@+id/location_editText"/>
    <Button
            android:text="Open Website"
            android:layout_width="141dp"
            android:layout_height="54dp"
            android:id="@+id/websiteButton" app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="32dp"
            android:layout_marginStart="32dp" android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/website_editText"/>
    <Button
            android:text="Open Location"
            android:layout_width="141dp"
            android:layout_height="54dp"
            android:id="@+id/locationButton" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="32dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="92dp" app:layout_constraintTop_toBottomOf="@+id/websiteButton"/>
    <Button
            android:text="Share this text"
            android:layout_width="141dp"
            android:layout_height="54dp"
            android:id="@+id/shareButton" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="32dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="100dp" app:layout_constraintTop_toBottomOf="@+id/locationButton"/>
    <Button
            android:text="Take a picture"
            android:layout_width="275dp"
            android:layout_height="45dp"
            android:id="@+id/pictureButton" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="28dp"/>
</android.support.constraint.ConstraintLayout>